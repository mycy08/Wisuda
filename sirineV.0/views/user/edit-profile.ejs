<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
        <link rel="stylesheet" href="https://v40.pingendo.com/assets/4.0.0/default/theme.css" type="text/css">
        <link rel="stylesheet" href="styles/custome.css" type="text/css">  
        </head>
      
      <body class="background-hitam">
      
        <div class="py-2 text-center background-hitam">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <h1 class="mb-2 mt-2 text-white">Edit Profile</h1>
                <% if(flash && flash.err) { %>
                  <p class="alert alert-success">
                <% Object.keys(flash.err).forEach(function(error) { %>
                  <%- JSON.stringify(flash.err[error]) %></p>
                <% }) %>
                
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <div class="py-1">
          <div class="container cardsview">
            <div class="row ">
              <div class="col-md-3 m-2 py-2 mt-6 formcard ">
                  <form enctype="multipart/form-data" role="form" method="POST" action="/user/uploadPhotoProfil/<%= editProfile.id %>">
                    <%
                    if(editProfile.photo_url){%>
                        <img class="img-thumbnail" src="/images/user/<%=editProfile.photo_url%>">
                    <%}
                    else{%>
                        <img class="img-thumbnail" src="/images/user/default.png">
                    <%}
                  %>
                  <input type="file" name="photo_url" class="form-control">
                <button type="submit" class="btn btn-warnabiru ">Simpan</button>
                </form>
              </div>
              <div class="col-md-4">
                 <h2 class="mt-3">Ubah Biodata Diri</h2>
                 <form method="post" action="/user/updateProfile/<%= editProfile.id %>">
                    <div class="form-group">
                        
                        <input type="text" class="form-control" placeholder="Nama" name="nama" value="<%= editProfile.nama %>"> </div>
                      <div class="form-group">
                      <input type="date" class="form-control" name="tgl_lahir" placeholder="" id="myDate"> </div>
                        <div class="form-group">
                         <span>Jenis Kelamin : </span>
                         <% if(editProfile.jenis_kelamin=='Pria'){%>
                            <input type="radio" class="m-1 mt-1" placeholder="pria" checked="checked" name="jenis_kelamin" value="Pria">Pria
                            <input type="radio" class="m-1 mt-1" placeholder="Wanita"   name="jenis_kelamin" value="Wanita">Wanita</div>
                            <%}
                                else if(editProfile.jenis_kelamin=='Wanita'){%>
                                    <input type="radio" class="m-1 mt-1" placeholder="pria"  name="jenis_kelamin" value="Pria">Pria
                                    <input type="radio" class="m-1 mt-1" placeholder="Wanita" checked="checked"  name="jenis_kelamin" value="Wanita">Wanita</div>
                                    
                                    <%}else{%>
                                        <input type="radio" class="m-1 mt-1" placeholder="pria"  name="jenis_kelamin" value="Pria">Pria
                                        <input type="radio" class="m-1 mt-1" placeholder="Wanita"   name="jenis_kelamin" value="Wanita">Wanita</div>
                                <%}
                            %>
                          
                          
                  
                  <h2 class="mt-3">Ubah Kontak</h2>
                 
                    <div class="form-group">
                     <input type="email" class="form-control" placeholder="Email" name="email" required value="<%= editProfile.email %>"> 
                     </div>
                      <div class="form-group">
                      <input type="number" class="form-control" placeholder="No ponsel" name="no_hp" required value="<%= editProfile.no_hp %>"> 
                       
                        </div>
                        <button type="submit" class="btn btn-warnabiru">Simpan</button>
                 
              </div>
            </form>
              <div class="col-md-4">            
                <h2 class="mt-3">Ubah Password</h2>
                 <form method="POST" action="/user/updateProfilPassword/<%= editProfile.id %>">
                    <div class="form-group">
                     <input type="password" class="form-control" name="password_lama" placeholder="Password Lama"> 
                     </div>
                      <div class="form-group">
                      <input type="password" class="form-control" name="password_baru" placeholder="Password Baru"> 
                       </a></div>
                       <button type="submit" class="btn btn-warnabiru">Simpan</button> 
                          
                  </form>
            
            </div>
            </div>
            </div>
          </div>
          
        <script>
                function myFunction() {
                    document.getElementById("myDate").value = "<%=  editProfile.tgl_lahir%>";
                }
                myFunction();
        </script>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        
      </body>